#include <dt-bindings/media/xilinx-vip.h>

/ {
	amba_pl: amba_pl@0 {
		#address-cells = <2>;
		#size-cells = <2>;
		compatible = "simple-bus";
		ranges ;

		axi_iic_0_sensor: i2c@a4070000 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "xlnx,axi-iic-2.1";
		        interrupt-names = "iic2intc_irpt";
			interrupt-parent = <&gic>;
			interrupts = <0 91 4>;
			reg = <0x0 0xa4070000 0x0 0x10000>;
		        clock-names = "s_axi_aclk";
			clocks = <&misc_clk_4>;

			imx274: sensor@1a{
				compatible = "sony,imx274";
				reg = <0x1a>;
				#address-cells = <1>;
				#size-cells = <0>;
				reset-gpios = <&gpio0 32 0>;

				port@0 {
					reg = <0>;

					sensor_out: endpoint {
						remote-endpoint = <&csiss_in>;
					};
				};
			};
		};

		csiss_1: csiss@a4060000 {
			compatible = "xlnx,mipi-csi2-rx-subsystem-5.0";
			reg = <0x0 0xa4060000 0x0 0x10000>;
			clock-names = "lite_aclk", "dphy_clk_200M", "video_aclk";
			clocks = <&misc_clk_4>, <&misc_clk_5>, <&misc_clk_0>;
			interrupt-parent = <&gic>;
			interrupts = <0 90 4>;

			xlnx,csi-pxl-format = <0x2b>;
			xlnx,axis-tdata-width = <0x20>;
			xlnx,max-lanes = <0x4>;
			xlnx,en-active-lanes;
			xlnx,vc = <0x4>;
			xlnx,ppc = <0x4>;
			xlnx,vfb;

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@1 {
					reg = <1>;

					xlnx,video-format = <XVIP_VF_MONO_SENSOR>;
					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					csiss_out: endpoint {
						remote-endpoint = <&extractframes_in>;
					};
				};
				port@0 {
					reg = <0>;

					xlnx,video-format = <XVIP_VF_MONO_SENSOR>;
					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					csiss_in: endpoint {
						data-lanes = <1 2 3 4>;
						remote-endpoint = <&sensor_out>;
					};
				};
			};
		};

		extractEFrames: extractEFrames@a40c0000 {
			compatible = "xlnx,hdrextract-1.0";
			reg = <0x0 0xa40c0000 0x0 0x10000>;
			clocks = <&misc_clk_0>;
			reset-gpios = <&gpio0 27 1>;
			xlnx,max-width = <3840>;
			xlnx,max-height = <2160>;

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@0 {
					reg = <0>;

					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					extractframes_in: endpoint {
						remote-endpoint = <&csiss_out>;
					};
				};

				port@1 {
					reg = <1>;

					xlnx,video-format = <XVIP_VF_MONO_SENSOR>;
					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					extractframes_out1: endpoint {
						remote-endpoint = <&hdrmerge_in1>;
					};
				};
				port@2 {
					reg = <2>;

					xlnx,video-format = <XVIP_VF_MONO_SENSOR>;
					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					extractframes_out2: endpoint {
						remote-endpoint = <&hdrmerge_in2>;
					};
				};
			};
		};

		hdrmerge: hdrmerge@a40e0000 {
			compatible = "xlnx,hdrmerge-1.0";
			reg = <0x0 0xa40e0000 0x0 0x10000>;
			clocks = <&misc_clk_0>;
			reset-gpios = <&gpio0 28 1>;
			xlnx,max-width = <3840>;
			xlnx,max-height = <2160>;

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@0 {
					reg = <0>;

					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					hdrmerge_in1: endpoint {
						remote-endpoint = <&extractframes_out1>;
					};
				};

				port@1 {
					reg = <1>;

					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					hdrmerge_in2: endpoint {
						remote-endpoint = <&extractframes_out2>;
					};
				};

				port@2 {
					reg = <2>;

					xlnx,video-format = <XVIP_VF_MONO_SENSOR>;
					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					hdrmerge_out: endpoint {
						remote-endpoint = <&demosaic_in>;
					};
				};
			};
		};

		ISPPipeline: ISPPipeline@a40f0000 {
			compatible = "xlnx,isppipeline-1.0";
			reg = <0x0 0xa40f0000 0x0 0x10000>;
			clocks = <&misc_clk_0>;
			reset-gpios = <&gpio0 29 1>;
			xlnx,max-width = <3840>;
			xlnx,max-height = <2160>;
			xlnx,rgain = <160>;
			xlnx,bgain = <154>;
			xlnx,pawb = <512>;
			xlnx,mode-reg = <1>;

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@0 {
					reg = <0>;

					xlnx,video-width = <10>;
					xlnx,cfa-pattern = "rggb";

					demosaic_in: endpoint {
						remote-endpoint = <&hdrmerge_out>;
					};
				};

				port@1 {
					reg = <1>;

					xlnx,video-width = <8>;

					demosaic_out: endpoint {
						remote-endpoint = <&scaler_in>;
					};
				};
			};
		};

		scaler_1: scaler@a4080000 {
			compatible = "xlnx,v-vpss-scaler-2.2";
			reg = <0x0 0xa4080000 0x0 0x40000>;
			clock-names = "aclk_axis", "aclk_ctrl";
			clocks = <&misc_clk_0>, <&misc_clk_0>;
			xlnx,num-hori-taps = <6>;
			xlnx,num-vert-taps = <6>;
			xlnx,pix-per-clk = <4>;
			reset-gpios = <&gpio0 30 1>;
			xlnx,max-width = <3840>;
			xlnx,max-height = <2160>;

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@0 {
					reg = <0>;
					xlnx,video-format = <XVIP_VF_RBG>;
					xlnx,video-width = <8>;

					scaler_in: endpoint {
						remote-endpoint = <&demosaic_out>;
					};
				};
				port@1 {
					reg = <1>;
					xlnx,video-format = <XVIP_VF_YUV_422>;
					xlnx,video-width = <8>;

					scaler_out: endpoint {
						remote-endpoint = <&vcap_csi_in>;
					};
				};
			};
		};

		fb_wr_csi: fb_wr@a40d0000 {
			compatible = "xlnx,axi-frmbuf-wr-v2.1";
			reg = <0x0 0xa40d0000 0x0 0x10000>;
			#dma-cells = <1>;
			interrupt-parent = <&gic>;
			interrupts = <0 92 4>;
			xlnx,vid-formats = "yuyv", "rgb888";
			reset-gpios = <&gpio0 31 1>;
			xlnx,dma-addr-width = <64>;
			xlnx,pixels-per-clock = <4>;
			xlnx,max-width = <3840>;
			xlnx,max-height = <2160>;
			clocks = <&misc_clk_0>;
			clock-names = "ap_clk";
		};

		vcap_csi {
			compatible = "xlnx,video";
			dmas = <&fb_wr_csi 0>;
			dma-names = "port0";

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@0 {
					reg = <0>;
					direction = "input";

					vcap_csi_in: endpoint {
						remote-endpoint = <&scaler_out>;
					};
				};
			};
		};
	};
};
